# Flask 安全配置
SECRET_KEY=your-secret-key-change-this-in-production

# 数据库配置
DATABASE_URI=sqlite:////app/instance/zai2api.db

# 时区配置
TZ=Asia/Shanghai

# 日志级别
LOG_LEVEL=INFO

# Token 刷新间隔（秒）
TOKEN_REFRESH_INTERVAL=3600

# 错误重试次数
ERROR_RETRY_COUNT=3

# 错误封禁阈值
ERROR_BAN_THRESHOLD=3

# 代理配置
PROXY_ENABLED=false
PROXY_URL=

# 缓存配置
CACHE_ENABLED=false
CACHE_TIMEOUT=300
CACHE_BASE_URL=

# 流式转换
STREAM_CONVERSION_ENABLED=false

# 生成超时（秒）
IMAGE_TIMEOUT=120
VIDEO_TIMEOUT=600